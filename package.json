{
  "name": "tbd",
  "repository": "git@github.com:amikos-software/verde.git",
  "author": "luxo-ai <luxo.ai@proton.me>",
  "private": false,
  "scripts": {
    "add:all": "lerna add",
    "add:example": "lerna add $1 --scope=app",
    "add:ui": "lerna add $1 --scope=@aemiko/ui",
    "add:utils": "lerna add $1 --scope=@aemiko/utils",
    "add:icons": "lerna add $1 --scope=@aemiko/icons",
    "bootstrap": "lerna bootstrap",
    "prebuild": "lerna bootstrap",
    "build:icons": "lerna --scope=@aemiko/icons run build --stream",
    "build:shared": "lerna --scope='{@aemiko/ui,@aemiko/utils,@aemiko/icons}' run build --stream",
    "build:shared:dev": "lerna --scope='{@aemiko/ui,@aemiko/utils}' run build:dev --stream",
    "build:ui:dev": "lerna --scope=@aemiko/ui run build:dev --stream"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "run-s": "^0.0.0",
    "ts-node": "^10.2.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "example/app"
    ]
  }
}
